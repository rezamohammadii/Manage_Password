@model IEnumerable<ManagePassword.Database.Entity.General>

<div class="row" style="margin: auto;">

    <div class="col">
        <table class="table table-success table-striped-columns">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Web Site</th>
                    <th scope="col">Username</th>
                    <th  style="display:none" scope="col">pass</th>
                    <th scope="col">Copy Password</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Website</td>
                        <td>@item.Username</td>
                        <td style="display:none" id="pass"><input id="myInput-@item.Id" value="@item.Password" /></td>
                        <td><button onclick="myFunction(@item.Id)" id="copyTextBtn" class="btn btn-primary btn-sm" >Copy Password</button></td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
  // Get the text field
function myFunction(id) {
  // Get the text field
  var copyText = document.getElementById("myInput-"+id);

  // Select the text field
  copyText.select();
  copyText.setSelectionRange(0, 99999); // For mobile devices

   // Copy the text inside the text field
  navigator.clipboard.writeText(copyText.value);

  // Alert the copied text
  alert("Copied the text: " + copyText.value);
}
    </script>
}